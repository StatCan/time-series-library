{
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "mocha": true
    },
    "extends": ["eslint:recommended", "google"],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": "off",
        "semi": [
            "error",
            "always"
        ],
        "curly": 0,
        "comma-dangle": 0,
        "max-len": 2,
        "require-jsdoc": 0,
        "no-invalid-this": 1
    }
 } 